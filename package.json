{
  "name": "mcp-connectors",
  "version": "0.1.0",
  "private": true,
  "description": "monorepo for mcp connectors for disco.dev",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun run --filter '*' start",
    "server": "bun run --filter '*' spawn",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "check": "biome check .",
    "check:fix": "biome check --fix .",
    "format": "bun check:fix",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "dependencies": {
    "@stackone/mcp-connectors": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/node": "^22.13.5",
    "@typescript/native-preview": "^7.0.0-dev.20251120.1",
    "msw": "^2.10.4",
    "publint": "^0.3.15",
    "tsdown": "^0.14.0",
    "unplugin-unused": "^0.5.6",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StackOneHQ/mcp-connectors.git"
  },
  "author": "StackOne",
  "license": "Apache-2.0",
  "bugs": "https://github.com/StackOneHQ/mcp-connectors/issues",
  "homepage": "https://github.com/StackOneHQ/mcp-connectors#readme",
  "packageManager": "bun@1.3.2"
}