{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "lib": ["es2022"],
        "moduleResolution": "bundler",
        "types": ["node"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
