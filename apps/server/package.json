{
  "name": "@stackone/mcp-server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "spawn": "bun run src/spawn-server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "catalog:prod",
    "@stackone/mcp-connectors": "workspace:*",
    "express": "catalog:prod",
    "winston": "catalog:prod"
  },
  "devDependencies": {
    "@types/express": "catalog:dev",
    "@types/node": "catalog:dev"
  },
  "devEngines": {
    "runtime": [
      {
        "name": "node",
        "version": "^24.11.0",
        "onFail": "download"
      },
      {
        "name": "bun",
        "version": "^1.3.2",
        "onFail": "download"
      }
    ]
  }
}
