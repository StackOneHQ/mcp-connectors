{
  "name": "@stackone/mcp-test",
  "version": "0.0.7",
  "description": "automated testing for MCP servers",
  "type": "module",
  "bin": {
    "mcp-test": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "tsdown",
    "prepack": "bun run build",
    "typecheck": "tsgo --noEmit"
  },
  "keywords": [
    "mcp",
    "agent",
    "modelcontextprotocol",
    "testing",
    "claude-code",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "catalog:dev",
    "@types/treeify": "catalog:dev",
    "@typescript/native-preview": "catalog:dev",
    "publint": "catalog:dev",
    "tsdown": "catalog:dev",
    "unplugin-unused": "catalog:dev"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "catalog:prod",
    "@faker-js/faker": "catalog:peer",
    "@modelcontextprotocol/sdk": "catalog:prod",
    "chalk": "catalog:peer",
    "gunshi": "catalog:peer",
    "ora": "catalog:peer",
    "treeify": "catalog:peer",
    "zod": "catalog:prod"
  },
  "engines": {
    "bun": ">=1.2.0",
    "node": ">=22.14.0"
  },
  "devEngines": {
    "runtime": [
      {
        "name": "node",
        "version": "^24.11.0",
        "onFail": "download"
      },
      {
        "name": "bun",
        "version": "^1.3.2",
        "onFail": "download"
      }
    ]
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": "./src/index.ts",
    "./internal-server": "./src/internal-server.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js",
      "./internal-server": "./dist/internal-server.js",
      "./package.json": "./package.json"
    }
  }
}
